<div class="hero-unit">
<h1>Zamówienia</h1>
<%= link_to("Dodaj kategorię" , {:action => 'nowa'}, :class => 'btn btn-mini btn-primary')%>


<table class="table table-striped">
<tr class="info">
<th> Nazwa kategorii </th>
<th> Ilość produktów </th>
<th> Akcja </th>
</tr>
	<% @kategoria.each do |kategoria| %>
	<tr>
		<td><%= kategoria.Name %></td>
		<td class="center"><%= kategoria.products.size %></td>
		

		
<td  class="actions">
		
		<%= link_to("Pokaż",{:action => 'pokaz', :id => kategoria.id}, :class => 'btn btn-xs btn-default')%>
		<%= link_to("Edycja",{:action => 'edycja', :id => kategoria.id}, :class => 'btn btn-xs btn-primary')%>
		<%= link_to("Usuń",{:action => 'usun', :id => kategoria.id}, :class => 'btn btn-xs btn-danger')%>
		
</td>
	</tr>
<% end %>

</table>
</div>
