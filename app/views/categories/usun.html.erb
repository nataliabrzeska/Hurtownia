<div class="hero-unit">
<h1>Usunięcie kategorii</h1>


<%= form_for(:kategoria, :url => {:action => 'kasuj', :id => @kategoria.id}) do |pole| %>
<div class="alert alert-danger" role="alert">
	<p> Czy na pewno usunać kategorię? </p>
</div>

<table class="table table-striped">
<tr>
<th> Nazwa </th>
<td> <%= @kategoria.name %> </td>
</tr>


<tr>
<th> Utworzono </th>
<td> <%= @kategoria.created_at%> </td>
</tr>

</table>


<div style="text-align: center;">
<%= link_to("Powrót", {:action => 'index'}, :class => 'btn btn-primary')%>
<%= submit_tag("Usuń",:class => 'btn btn btn-danger') %>
</div>

<% end %>
</div>