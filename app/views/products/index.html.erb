<div class="hero-unit">
<h1>Produkty</h1>
<%= link_to("Dodaj nowy produkt" , {:action => 'nowy'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;"> Ilość produktów: <%= @produkt.size %> </p>

<table class="table table-striped">
<tr class="info">
<th> Nazwa produktu  </th>
<th> Cena [PLN]</th>
<th> Nazwa kategorii </th>
<th> Opis produktu </th>
<th> Akcja </th>
</tr>
	<% @produkt.each do |produkt| %>
	<tr>
		<td><%= produkt.name %></td>
		<td><%= produkt.price %></td>
		<td><%= produkt.category.name %></td>
	
		<td><%= produkt.description %></td>

		
<th>
		<%= link_to("Pokaż",{:action => 'pokaz', :id => produkt.id}, :class => 'btn btn-xs btn-default')%>
		<%= link_to("Edycja",{:action => 'edycja', :id => produkt.id}, :class => 'btn btn-xs btn-primary')%>
		<%= link_to("Usuń",{:action => 'usun', :id => produkt.id}, :class => 'btn btn-xs btn-danger')%>
		
</th>
		
	
</th>
</tr>
<% end %>
</table>
</div>


